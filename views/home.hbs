<div class="card-deck">
  {{#each items}}
    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 m-0 p-0 d-flex">
      <div class="card m-2" style="">
        {{#if imagePath}}
          <img src="{{imagePath}}" class="card-img-top" style="max-height:200px;object-fit: cover;
    object-position: center;" alt="{{title}}">
        {{/if}}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{title}}</h5>
          {{#unless imagePath}}
            <p>{{description}}</p>
          {{/unless}}
          <a href="/view/object?itemID={{id}}" class="btn btn-block btn-outline-secondary mt-auto">Explore</a>
        </div>
        <div class="card-footer text-muted">
          2 days ago
        </div>
      </div>
    </div>
  {{/each}}
</div>
