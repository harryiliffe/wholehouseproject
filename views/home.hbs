<div class="card-deck">
  {{#each items}}
    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12 m-0 p-0">
      <div class="card m-2" style="">
        {{#if imagePath}}
          <img src="{{imagePath}}" class="card-img-top" style="max-height:200px;object-fit: cover;
    object-position: center;" alt="{{title}}">
        {{/if}}
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <a href="/view/object?itemID={{id}}" class="btn btn-outline-primary">Explore</a>
          <a href="#" class="btn btn-outline-warning">Edit</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
